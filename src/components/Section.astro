---
import Container from './Container.astro';

interface Props {
  darker?: boolean;
  gridForm?: boolean;
}

const { darker = false, gridForm = false} = Astro.props;

---

<section class={`${darker ? 'darker': ''} ${gridForm ? 'gridForm' : ''}`}>
  <Container>
    <slot />
  </Container>
</section>




<style> 

  section{
    padding: 80px 0;


    &.darker{
      background: var(--secondary);
    }

    @media (max-width: 1000px) {
      & {
        padding: 40px 0;
      }
    }
  }

  .darker{
    background-color: #151515;
  }

  .gridForm{
  }

</style>