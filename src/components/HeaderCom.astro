---
import ButtonLink from "./ButtonLink.astro"
import Container from "./Container.astro"
import Section from "./Section.astro"
import SectionMainPage from './MainPage/SectionMainPage.astro'
import ButtonLinkMainPage from "./MainPage/ButtonLinkMainPage.astro"

---


<SectionMainPage>
  <header id="header">
    <div id="content-header">
      <h1>
        NÃ­colas Pitz</h1>
      <span>Web Design & Developer</span>
    </div>
    
    <div class="button-container">
      <ButtonLinkMainPage href="#" text="CV"/>
      <ButtonLinkMainPage href="/now" text="ABOUT ME"/>
      <ButtonLinkMainPage href="/projects" text="PROJECTS"/>
      <ButtonLinkMainPage href="#" text="CONTACT"/>
    </div>
    <div class="imgs">
      <img src="images/placeholder.png" alt="placeholder"/>
    </div>
    
  </header>
</SectionMainPage>


<style>

  #header{
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, 1fr);
    gap: 60px;

    #content-header{
      grid-column: span 2 / span 2;
      
      h1{
        font-size: 144px;
        display: block;
        text-align: justify;
        text-align-last: justify;

        @media (max-width: 1000px) {
          &{
            font-size: 13vw;
          }
        }
      }
      

      span{
        font-size: 26px;
        display: block;
        text-align: justify;
        text-align-last: justify;

        @media (max-width: 800px) {
          &{
            font-size: 22px;
          }
        }
      }

      
    }

    .button-container{
      grid-row-start: 2;
      text-align: right;
    }

    .imgs{
      grid-row-start: 2;
      text-align: right;

      img{
        width: 260px;

        @media (max-width: 800px) {
          &{
            width: 200px;
          }
        }

        @media (max-width: 450px) {
          &{
            width: 100px;
          }
        }
      }
    }
  }
  
</style>