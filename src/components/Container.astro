---
interface Props{
  padding?: string;
}

const {padding} = Astro.props;
---


<div class="container" style=`padding: ${padding};`>
  <slot />
</div>



<style is:global>

  .container{
    max-width: 1100px;
    margin: 0 calc(auto);
    padding: 0px 60px;

    @media screen and (max-width: 1000px) {
      &{
        padding: 0 24px;
      }
    }
  }

</style>